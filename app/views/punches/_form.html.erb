<%= form_for([@project, @project.punches.build]) do |f| %>
    <div class="form-group">
      <%= f.label :accomplished %>
      <%= f.text_area :accomplished, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :start_time %>
      <%= f.datetime_select :start_time, :order=>[:day, :month, :year] ,:value => Time.now.to_datetime, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= button_tag( :class => "btn btn-lg btn-primary form-control") do %>
          <span class="glyphicon glyphicon-floppy-disk"></span> Save Punch in
      <% end %>
    </div>
<% end %>